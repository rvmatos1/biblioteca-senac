@page "{id:int}"
@model Biblioteca.Pages.Pages.Bibliotecario.Edit

<div align="center">
@if(TempData["Mensagem"] != null)
{
   <div class="alert alert-danger">@TempData["Mensagem"]</div>
}
<link rel="stylesheet" href="~/lib/css/estilo.css"/>
</div>
<h1>Alterar Dados do Bibliotecario</h1>
<hr/>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="BibliotecarioModel.BibliotecarioID"/>
            <div class="form-group">
                <label asp-for="BibliotecarioModel.Nome"></label>
                <input asp-for="BibliotecarioModel.Nome" class="form-control"/>
                <span asp-validation-for="BibliotecarioModel.Nome" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="BibliotecarioModel.Email"></label>
                <input asp-for="BibliotecarioModel.Email" class="form-control"></textarea>
                <span asp-validation-for="BibliotecarioModel.Email" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="BibliotecarioModel.Senha"></label>
                <input asp-for="BibliotecarioModel.Senha" class="form-control" onkeyup="handlePassword(event)"/>
                <span asp-validation-for="BibliotecarioModel.Senha" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="BibliotecarioModel.Telefone"></label>
                <input asp-for="BibliotecarioModel.Telefone" class="form-control" maxlength="15" onkeyup="handlePhone(event)"/>
                <span asp-validation-for="BibliotecarioModel.Telefone" class="text-dange"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Bibliotecario/Index" class="btn btn-secondary"> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
<script>
    const handlePhone = (event) => {
        let input = event.target
        input.value = phoneMask(input.value)
    }

    const phoneMask = (value) => {
        if (!value) return ""
        value = value.replace(/\D/g, '')
        value = value.replace(/(\d{2})(\d)/, "($1) $2")
        value = value.replace(/(\d)(\d{4})$/, "$1-$2")
        return value
    }

    const handlePassword = (event) => {
        let input = event.target
        input.value = passwordMask(input.value)
    }

    const passwordMask = (value) => {
        if (!value) return ""
        let maskedValue = ''
        for (let i = 0; i < value.length; i++) {
            maskedValue += '*'
        }
        return maskedValue
    }


</script>
}