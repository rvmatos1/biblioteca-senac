@page
@model Biblioteca.Pages.Pages.Livro.Index
@if(TempData["Mensagem"] != null)
{
   <div class="alert alert-success">@TempData["Mensagem"]</div>
}
<link rel="stylesheet" href="~/lib/css/estilo.css"/>
<h1>Livros</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div >
    <table class="table table-bordered table-sm table-hover-custom">
        <thead>
            <tr>
                <td scope="col">ID</td>
                <td scope="col">TÃ­tulo</td>
                <td scope="col">Autor</td>
                <td scope="col">ISBN</td>
                <td scope="col">Ano de Publicacao</td>
                <td scope="col">Quantidade em Estoque</td>
                <td scope="col"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var livroModel in Model.LivroList)
            {
                <tr>
                    <td>@Html.DisplayFor(model => livroModel.LivroID)</td>
                    <td>@Html.DisplayFor(model => livroModel.TituloLivro)</td>
                    <td>@Html.DisplayFor(model => livroModel.Autor)</td>
                    <td>@Html.DisplayFor(model => livroModel.ISBN)</td>   
                    <td>@Html.DisplayFor(model => livroModel.AnoPublicacao)</td>
                    <td>@Html.DisplayFor(model => livroModel.QuantidadeDisponivel)</td>
                    <td>
                        <a class="btn btn-sm btn-secondary active" asp-page="./Edit" asp-route-id="@livroModel.LivroID"> <i class="fa fa-pencil"></i></a>
                        <a class="btn btn-sm btn-success active" asp-page="./Details" asp-route-id="@livroModel.LivroID"> <i class="fa fa-eye"></i> </a>
                        <a class="btn btn-secondary btn-sm btn-danger" asp-page="./Delete" asp-route-id="@livroModel.LivroID"> <i class="fa fa-trash"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<p style="text-align:center"><a class="btn btn-primary" role="button" asp-page="./Create"> <strong>Novo Livro</strong></a></p>
</div>

<style>
    main{
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    .info{
        width: 60vw;
        text-align: center;
        background-color: rgb(255, 255, 255);
        padding: 10px;
        border-radius: 5px;
    }
</style>